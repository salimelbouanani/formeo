{% extends 'base.html.twig' %}

{% block body %}
    <h1>Teacher</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ teacher.surname }}</td>
            </tr>
            <tr>
                <th>Datebirth</th>
                <td>{% if teacher.dateBirth %}{{ teacher.dateBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('teacher_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('teacher_edit', { 'id': teacher.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
