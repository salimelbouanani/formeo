{% extends 'base.html.twig' %}

{% block body %}
    <h1>Teachers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Datebirth</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td><a href="{{ path('teacher_show', { 'id': teacher.id }) }}">{{ teacher.id }}</a></td>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.surname }}</td>
                <td>{% if teacher.dateBirth %}{{ teacher.dateBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('teacher_show', { 'id': teacher.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('teacher_edit', { 'id': teacher.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('teacher_new') }}">Create a new teacher</a>
        </li>
    </ul>
{% endblock %}
